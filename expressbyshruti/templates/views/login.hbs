<body>
    <div class="container">
        <div class="row w-100 d-flex justify-content-center align-items-center main_div">

            <div class="col-12 col-lg-6 col-md-8 col-xxl-5">
                <div class="card py-3 px-2">
                    <p class="text-center my-3 text-capitalize"><span>connect with us</span></p>
                    <div class="row mx-auto">
                        <div class="col-4">
                            <a href="https://www.instagram.com/shruti_sings__/" target="_shruti"><i
                                    class="fab fa-instagram"></i></a>
                        </div>
                        <div class="col-4">
                            <a href="https://www.instagram.com/shruti_sings__/" target="_shruti"><i
                                    class="fab fa-facebook"></i></a>
                        </div>
                        <div class="col-4">
                            <a href="https://www.instagram.com/shruti_sings__/" target="_shruti"><i
                                    class="fab fa-twitter"></i></a>
                        </div>
                    </div>
                    <div class="division">
                        <div class="row">
                            <div class="col-6 mx-auto mb-4">
                                <span class="main-heading">BVICAM LOGIN</span>
                            </div>
                        </div>
                        <form class="was-validated " action="/login" method="POST">
                            <div class="mb-3">

                                
                                <input type="email" class="form-control" name="emailaddress"   id="exampleFormControlInput1"
                                    placeholder="name@example.com" required autocomplete="off">
                                    <div class="invalid-feedback">Enter Email Id</div>
                                    <div class="valid-feedback">Valid</div>

                            </div>
                            <div class="mb-3">

                                  
                                <input type="password" class="form-control" name="password" id="exampleFormControlInput1"
                                    placeholder="password" required autocomplete="off">
                                    <div class="invalid-feedback">Enter password</div>
                                    <div class="valid-feedback">Valid</div>

                            </div>
                            <div class="row">
                                <div class="col-md-6 col-12 ">
                                    <div class="form-group form-check text-left">
                                        {{!-- <input type="checkbox" class="form-check-input" name=""> --}}
                                       <a href="/forgotpass"><label class="form-check-label">Forgot Password?</label></a>
                                    </div>
                                </div>
                                <div class="col-md-6 col-12 bn text-capitalize text-right">
                                    <a href="#" class="register">Register Here</a>
                                </div>
                            </div>
                            <div class="my-3">
                                <button type="submit" class="btn btn-block w-100 btn-primary btn-lg ">
                                    <small><i class="far fa-user pr-2"></i> Login</small>

                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
